<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backHomeBtn" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/checkTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/chechk"
                android:text="Thank you"
                android:textColor="#60B97F"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/checkLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/accAddressTxt"
                android:layout_margin="20dp"
                android:background="@drawable/background1"
                android:padding="3dp" >

                <LinearLayout
                    android:id="@+id/referenceIdLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/package_title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="2dp"
                        android:text="72 HYD Tirupathi Benz/Volvo"
                        android:textColor="#3E3F80"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/package_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="2dp"
                        android:text="AC/45"
                        android:textColor="#E2A9EE"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Duration : 3 Days"
                        android:textColor="#818181"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view11"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/referenceIdLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:id="@+id/checkingLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/view11"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/clockTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/clock" />

                    <LinearLayout
                        android:id="@+id/lay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/clockTxt"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/startTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="06:30 PM"
                            android:textColor="#555148"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/viev"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="#DCDCDC" />

                        <TextView
                            android:id="@+id/durationTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/lay1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/endTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="07:00 AM"
                            android:textColor="#555148"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/viev1"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="#DCDCDC" />

                        <TextView
                            android:id="@+id/finalTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:00 Hrs"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/seatTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/lay3"
                        android:background="@drawable/one" />

                    <LinearLayout
                        android:id="@+id/lay3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/totalSeatsTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 seats"
                            android:textColor="#586182"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seatsNameTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="G3, G6, G9"
                            android:textColor="#40BA57"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/checkingLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:id="@+id/stayNightsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Boarding Point : "
                        android:textColor="#272727"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/boarding_point_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="KPHB Main Road - 5:40 PM"
                        android:textColor="#7D7D7D"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/stayNightsLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:id="@+id/roomsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:text="No of People"
                        android:textColor="#272727"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/adultLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/childLay"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADULTS"
                            android:textColor="#C3C3C3"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="5dp" >

                            <TextView
                                android:id="@+id/adult_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="2"
                                android:textColor="#C3C3C3"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/adultLay"
                        android:paddingTop="15dp"
                        android:text="+"
                        android:textColor="#C3C3C3"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/childLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@+id/textView7"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHILDREN"
                            android:textColor="#C3C3C3"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="5dp" >

                            <TextView
                                android:id="@+id/child_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="1"
                                android:textColor="#C3C3C3"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/roomsResult_val"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="="
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/roomsResult_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dp"
                        android:padding="10dp"
                        android:text="3"
                        android:textColor="#7D7D7D"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/roomsLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:id="@+id/grandTotalLay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textColor="#272727"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incl. Taxes &amp; Service Fee"
                            android:textColor="#7A7A7A"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/grandTotal_Result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="Rs 3000"
                        android:textColor="#D95469"
                        android:textSize="25sp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Please check your email for more details" />

            <TextView
                android:id="@+id/accAddressTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/checkTick"
                android:gravity="center"
                android:padding="30dp"
                android:text="Your booking for Tirupathi Benz/Volvo Package Sucessfully done!"
                android:textColor="#808080"
                android:textIsSelectable="true"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/backHomeBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:background="#3E3F80"
        android:drawableLeft="@drawable/back_icon"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:text="Back to Home"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>