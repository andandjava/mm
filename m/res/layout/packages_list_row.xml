<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/arrowTxt"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/package_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72 HYD Tirupathi Benz/Volvo"
                android:padding="2dp"
                android:textSize="19sp"
                android:textColor="#3E3F80"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/package_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC/45"
                android:padding="2dp"
                android:textSize="18sp"
                android:textColor="#E2A9EE"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/available_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN  MON  TUE  WED  THU  FRI  SAT"
                android:padding="2dp"
                android:textSize="17sp"
                android:textColor="#AFAFAF"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/arrowTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right" />

    </RelativeLayout>

</LinearLayout>