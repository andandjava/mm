<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    >
    <ScrollView 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         >
    

            <RelativeLayout
                android:id="@+id/checkLay1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@drawable/background1"
                android:padding="10dp" >
                
                <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:singleLine="true"
        android:ellipsize="end"
         android:padding="10dp"
        android:text="ORDER INFORMATION"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_wrong"
        android:padding="10dp" />
                
                <TextView
                android:id="@+id/tv_ref_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/tv_title"
                android:textSize="16sp"
                android:textColor="#838383"
                android:text="Ref ID:"/>

                <View
                    android:id="@+id/view33"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_ref_id"
                    android:background="#DCDCDC" />
                
                
                
                <LinearLayout
                    android:id="@+id/rr_date_layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view33"
                    android:padding="5dp"
                    android:orientation="horizontal" >
                    
                     <RelativeLayout
                    android:id="@+id/rr_checkin_layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     >

                    <TextView
                        android:id="@+id/tv_text_checkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHECK-IN"
                         android:paddingTop="5dp"
                         android:paddingLeft="5dp"
                        android:textColor="#838383"
                        android:textSize="12sp" />
                    

                    <TextView
                        android:id="@+id/tv_value_checkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="13-10-2015"
                        android:drawableLeft="@drawable/calendar"
                        android:drawablePadding="5dp"
                        android:textColor="#838383"
                        android:textSize="12sp"
                        android:layout_below="@+id/tv_text_checkin" />
                </RelativeLayout>
                
                 <RelativeLayout
                    android:id="@+id/rr_checkout_layout1"
                    android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/tv_text_checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHECK-OUT"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="#838383"
                        android:textSize="12sp" />

                     <TextView
                        android:id="@+id/tv_value_checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                         android:drawableLeft="@drawable/calendar"
                        android:drawablePadding="5dp"
                        android:textColor="#838383"
                         android:text="15-10-2015"
                        android:textSize="12sp"
                        android:layout_below="@+id/tv_text_checkout"
                        
                        />
                </RelativeLayout>

                    
                </LinearLayout>
                
                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rr_date_layout1"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:id="@+id/stayNightsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/nightTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="NIGHTS"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nightStayValTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:text="1"
                        android:textColor="#838383"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view555"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/stayNightsLayout"
                    android:background="#DCDCDC" />
                
                 <RelativeLayout
                    android:id="@+id/stayRoomNumbersLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view555"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/roomsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="No OF ROOMS"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/roomsValTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:text="1"
                        android:textColor="#838383"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/view567"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/stayRoomNumbersLayout"
                    android:background="#DCDCDC" />
                
                <LinearLayout
                    android:id="@+id/ll_no_of_occupants1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view567"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    >
                     

                    <TextView
                        android:id="@+id/tv_text_occupants1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="No OF OCCUPANTS"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                 <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                     android:layout_weight="1" >
                    <TextView
                        android:id="@+id/tv_value_adults1"
                         android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="ADULTS"
                        android:padding="5dp"
                        android:textColor="#838383"
                        android:textSize="12sp"
                        android:layout_weight="1" />

                     <TextView
                        android:id="@+id/tv_value_children1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="#838383"
                         android:text="CHILDREN"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        
                        />
                     </LinearLayout>
                    
                </LinearLayout>
                
               <View
                    android:id="@+id/view51"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ll_no_of_occupants1"
                    android:background="#DCDCDC" />

               <LinearLayout
                    android:id="@+id/rr_roomtype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view51"
                    android:padding="10dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                     >

                    <TextView
                        android:id="@+id/tv_txt_rtype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="ROOM TYPE :"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:layout_weight="0.6" />

                    <TextView
                        android:id="@+id/tv_value_rtype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:text="A/C SUITE,A/C SUITE,A/C SUITE"
                        android:textColor="#838383"
                        android:textSize="18sp"
                         android:layout_weight="0.4" />
                </LinearLayout>

                <View
                    android:id="@+id/view61"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rr_roomtype"
                    android:background="#DCDCDC" />
                
                
                <LinearLayout
                    android:id="@+id/rr_roomtypecost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view61"
                    android:padding="10dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                     >

                    <TextView
                        android:id="@+id/tv_txt_rtypecost"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="ROOM TARIFF :"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:layout_weight="0.6" />
                    
                    <TextView
                        android:id="@+id/roomtariff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:text="A/C SUITE,A/C SUITE,A/C SUITE"
                        android:textColor="#838383"
                        android:textSize="18sp"
                         android:layout_weight="0.4" />
                </LinearLayout>
                
                <View
                    android:id="@+id/view62"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rr_roomtypecost"
                    android:background="#DCDCDC" />
                
                <RelativeLayout
                android:id="@+id/grandTotalLay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view62"
                android:background="@drawable/background1"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/textView_ta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView_inc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incl. Taxes &amp; Service Fee"
                        android:textSize="12sp" 
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/luxTaxTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textColor="#838383"
                        android:textSize="9sp" />
                    
                    <TextView
                        android:id="@+id/serviceTaxtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Tax : 0"
                        android:textSize="9sp"
                         android:textColor="#838383" />
                    
                    <TextView
                        android:id="@+id/grandTotal_Result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 0"
                        android:textColor="#D95469"
                        android:textSize="25sp" />
                </LinearLayout>
                   
            </RelativeLayout>
             <View
                    android:id="@+id/view611"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/grandTotalLay1"
                    android:background="#DCDCDC" />
             
                <TextView
                        android:id="@+id/tv_summary"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                         android:layout_below="@+id/view611"
                        android:text="For cancellations / Modifications, visit the my Reservations page on website to retrieve your reservation.\n or \n Contact Helpdesk"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="10dp" />
                
            </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    

